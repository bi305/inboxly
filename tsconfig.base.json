{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["packages/shared/src/index.ts"],
      "@shared/*": ["packages/shared/src/*"],
      "@ui": ["packages/ui/src/index.ts"],
      "@ui/*": ["packages/ui/src/*"]
    }
  }
}
